<div class="usage-dashboard">
  <h1>Monthly Usage Statistics</h1>
  
  <div class="back-link">
    <%= link_to "← Back to Usage Dashboard", usage_index_path, class: "button secondary" %>
  </div>
  
  <div class="date-header">
    <h2><%= @monthly_stats[:month].strftime("%B %Y") %></h2>
  </div>
  
  <div class="overview-stats">
    <div class="stat-card">
      <h3>Messages This Month</h3>
      <p class="stat-value"><%= @monthly_stats[:messages_count] %></p>
    </div>
    
    <div class="stat-card">
      <h3>Active Chats</h3>
      <p class="stat-value"><%= @monthly_stats[:chats_count] %></p>
    </div>
    
    <div class="stat-card">
      <h3>Total Tokens</h3>
      <p class="stat-value"><%= number_with_delimiter(@monthly_stats[:total_tokens]) %></p>
    </div>
    
    <div class="stat-card">
      <h3>Estimated Cost</h3>
      <p class="stat-value">$<%= sprintf('%.4f', @monthly_stats[:cost_estimate][:total_cost]) %></p>
    </div>
  </div>
  
  <div class="detailed-stats">
    <div class="section">
      <h2>Token Breakdown</h2>
      <ul>
        <li><strong>Input Tokens:</strong> <%= number_with_delimiter(@monthly_stats[:input_tokens]) %></li>
        <li><strong>Output Tokens:</strong> <%= number_with_delimiter(@monthly_stats[:output_tokens]) %></li>
        <li><strong>Total Tokens:</strong> <%= number_with_delimiter(@monthly_stats[:total_tokens]) %></li>
        <li><strong>Avg Tokens/Day:</strong> <%= number_with_delimiter(@monthly_stats[:total_tokens] / Date.current.day) %></li>
      </ul>
    </div>
    
    <div class="section">
      <h2>Cost Breakdown</h2>
      <ul>
        <li><strong>Input Cost:</strong> $<%= sprintf('%.4f', @monthly_stats[:cost_estimate][:input_cost]) %></li>
        <li><strong>Output Cost:</strong> $<%= sprintf('%.4f', @monthly_stats[:cost_estimate][:output_cost]) %></li>
        <li><strong>Total Cost:</strong> $<%= sprintf('%.4f', @monthly_stats[:cost_estimate][:total_cost]) %></li>
        <li><strong>Avg Cost/Day:</strong> $<%= sprintf('%.4f', @monthly_stats[:cost_estimate][:total_cost] / Date.current.day) %></li>
      </ul>
    </div>
    
    <div class="section">
      <h2>Activity Summary</h2>
      <ul>
        <li><strong>Days in Month:</strong> <%= @monthly_stats[:month].end_of_month.day %></li>
        <li><strong>Days Elapsed:</strong> <%= Date.current.day %></li>
        <li><strong>Avg Messages/Chat:</strong> <%= @monthly_stats[:chats_count] > 0 ? (@monthly_stats[:messages_count] / @monthly_stats[:chats_count]).round(1) : 0 %></li>
        <li><strong>Avg Tokens/Message:</strong> <%= @monthly_stats[:messages_count] > 0 ? (@monthly_stats[:total_tokens] / @monthly_stats[:messages_count]).round(1) : 0 %></li>
      </ul>
    </div>
  </div>
  
  <div class="month-navigation">
    <%= link_to "← Previous Month", monthly_usage_index_path(month: (@monthly_stats[:month] - 1.month).strftime("%Y-%m")), class: "button secondary" %>
    <%= link_to "Next Month →", monthly_usage_index_path(month: (@monthly_stats[:month] + 1.month).strftime("%Y-%m")), class: "button secondary" %>
  </div>
</div>

