<div class="usage-dashboard">
  <h1>Token Usage Dashboard</h1>
  
  <div class="overview-stats">
    <div class="stat-card">
      <h3>Total Chats</h3>
      <p class="stat-value"><%= @usage_stats[:total_chats] %></p>
    </div>
    
    <div class="stat-card">
      <h3>Total Messages</h3>
      <p class="stat-value"><%= @usage_stats[:total_messages] %></p>
    </div>
    
    <div class="stat-card">
      <h3>Total Tokens</h3>
      <p class="stat-value"><%= number_with_delimiter(@usage_stats[:total_tokens]) %></p>
    </div>
    
    <div class="stat-card">
      <h3>Estimated Cost</h3>
      <p class="stat-value">$<%= sprintf('%.4f', @usage_stats[:cost_estimates][:total_cost]) %></p>
    </div>
  </div>
  
  <div class="detailed-stats">
    <div class="section">
      <h2>Today's Usage</h2>
      <ul>
        <li><strong>Messages:</strong> <%= @usage_stats[:today][:messages_count] %></li>
        <li><strong>Chats:</strong> <%= @usage_stats[:today][:chats_count] %></li>
        <li><strong>Tokens:</strong> <%= number_with_delimiter(@usage_stats[:today][:total_tokens]) %></li>
        <li><strong>Cost:</strong> $<%= sprintf('%.4f', @usage_stats[:today][:cost_estimate][:total_cost]) %></li>
      </ul>
    </div>
    
    <div class="section">
      <h2>This Month's Usage</h2>
      <ul>
        <li><strong>Messages:</strong> <%= @usage_stats[:this_month][:messages_count] %></li>
        <li><strong>Chats:</strong> <%= @usage_stats[:this_month][:chats_count] %></li>
        <li><strong>Tokens:</strong> <%= number_with_delimiter(@usage_stats[:this_month][:total_tokens]) %></li>
        <li><strong>Cost:</strong> $<%= sprintf('%.4f', @usage_stats[:this_month][:cost_estimate][:total_cost]) %></li>
      </ul>
    </div>
    
    <div class="section">
      <h2>Models Used</h2>
      <ul>
        <% @usage_stats[:models_used].each do |model, count| %>
          <li><strong><%= model %>:</strong> <%= count %> chats</li>
        <% end %>
      </ul>
    </div>
  </div>
  
  <div class="actions">
    <%= link_to "Top Chats by Usage", top_chats_usage_index_path, class: "button" %>
    <%= link_to "Daily Usage", daily_usage_index_path, class: "button" %>
    <%= link_to "Monthly Usage", monthly_usage_index_path, class: "button" %>
    <%= link_to "Back to Chats", root_path, class: "button" %>
  </div>
</div>

<style>
.usage-dashboard {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.overview-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.stat-card {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  border: 1px solid #dee2e6;
}

.stat-card h3 {
  margin: 0 0 10px 0;
  color: #495057;
  font-size: 14px;
  text-transform: uppercase;
}

.stat-value {
  font-size: 24px;
  font-weight: bold;
  color: #007bff;
  margin: 0;
}

.detailed-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.section {
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #dee2e6;
}

.section h2 {
  margin-top: 0;
  color: #495057;
  border-bottom: 1px solid #dee2e6;
  padding-bottom: 10px;
}

.section ul {
  list-style: none;
  padding: 0;
}

.section li {
  padding: 8px 0;
  border-bottom: 1px solid #f8f9fa;
}

.actions {
  text-align: center;
}

.button {
  display: inline-block;
  padding: 10px 20px;
  margin: 0 10px;
  background: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.button:hover {
  background: #0056b3;
}
</style>
